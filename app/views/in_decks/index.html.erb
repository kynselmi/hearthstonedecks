<h1>Listing in_decks</h1>

<table>
  <thead>
    <tr>
      <th>Card</th>
      <th>Deck</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @in_decks.each do |in_deck| %>
      <tr>
        <td><%= in_deck.card_id %></td>
        <td><%= in_deck.deck_id %></td>
        <td><%= link_to 'Show', in_deck %></td>
        <td><%= link_to 'Edit', edit_in_deck_path(in_deck) %></td>
        <td><%= link_to 'Destroy', in_deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

